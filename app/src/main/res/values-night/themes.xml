    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_height">48dp</item>
        <item name="qmui_topbar_image_btn_height">30dp</item>
        <item name="qmui_topbar_title_text_size">18sp</item>
        <item name="qmui_topbar_title_color">@color/black</item>
        <item name="qmui_topbar_title_bold">false</item>
        <item name="qmui_topbar_text_btn_bold">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_F5</item>
    </style>
    <!-- Base application theme. -->
    <style name="SplashActivityTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="FullTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <!--自定义switch的按钮和轨迹颜色theme-->
    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!--  switch打开时的按钮的颜色 打开时的轨迹的颜色  30%这个颜色-->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!--  switch关闭时的按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/color_F5</item>
        <!--  switch关闭时的轨迹的颜色 -->
        <item name="android:colorForeground">@color/color_F5</item>

    </style>
    <style name="NoTitleFullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
