<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:text="请选择地图"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_F5"/>

        <TextView
            android:id="@+id/map_gaode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:text="高德地图"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_34"
            android:visibility="gone" />

        <View
            android:id="@+id/line_gaode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_F5"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/map_baidu"
            android:textSize="@dimen/sp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:text="百度地图"
            android:gravity="center"
            android:textColor="@color/color_34"
            android:visibility="gone" />

        <View
            android:id="@+id/line_baidu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_F5"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/map_tencent"
            android:textSize="@dimen/sp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:gravity="center"
            android:text="腾讯地图"
            android:textColor="@color/color_34"
            android:visibility="gone" />

        <View
            android:id="@+id/line_tencent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_B1"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4"
            android:background="@color/color_F5"/>

        <TextView
            android:id="@+id/cancle"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:text="取消"
            android:textColor="@color/color_34" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>