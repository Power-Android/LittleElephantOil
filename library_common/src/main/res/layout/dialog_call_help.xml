<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/dp_313"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_113"
                android:scaleType="fitXY"
                android:src="@drawable/dialog_call_help_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_85"
                android:layout_marginTop="@dimen/dp_24"
                android:gravity="center">

                <ImageView
                    android:id="@+id/call_help_online"
                    android:layout_width="@dimen/dp_123"
                    android:layout_height="@dimen/dp_83"
                    android:scaleType="fitXY"
                    android:src="@drawable/dialog_call_help_online" />

                <ImageView
                    android:id="@+id/call_help_phone"
                    android:layout_width="@dimen/dp_123"
                    android:layout_height="@dimen/dp_83"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:scaleType="fitXY"
                    android:src="@drawable/dialog_call_help_phone" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_17"
                android:textSize="@dimen/sp_14"
                android:text="工作时间"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/call_help_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_28"
                android:text="工作日周一到周五 9:00-18:00"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/help_call_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>