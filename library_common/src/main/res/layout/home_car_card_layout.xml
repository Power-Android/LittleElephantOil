<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:id="@+id/carview"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/car_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintTop_toTopOf="parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/car_img_iv_1"
            android:layout_width="@dimen/dp_98"
            android:layout_height="@dimen/dp_73"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/dp_20"
            app:riv_corner_radius="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@drawable/default_img_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/car_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_17"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#1D1D1D"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/car_img_iv_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/car_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_17"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@+id/car_navigation_tv"
            app:layout_constraintStart_toStartOf="@+id/car_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/car_name_tv" />

        <TextView
            android:id="@+id/car_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time_icom"
            android:drawablePadding="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="营业时间：每天09：00-22：00"
            android:textColor="#828282"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="@+id/car_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/car_address_tv" />
        <TextView
            android:id="@+id/car_navigation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_17"
            android:drawableLeft="@drawable/navigation_life_icon"
            android:drawablePadding="@dimen/dp_8"
            android:text="0.00km"
            android:textColor="@color/color_55"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toEndOf="@+id/car_address_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/float_layout"/>

        <com.qmuiteam.qmui.widget.QMUIFloatLayout
            android:id="@+id/float_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_12"
            android:minHeight="@dimen/dp_40"
            app:qmui_childHorizontalSpacing="@dimen/dp_5"
            app:qmui_childVerticalSpacing="@dimen/dp_5"
            app:layout_constraintEnd_toStartOf="@+id/car_navigation_tv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/car_img_iv_1"
            app:layout_constraintTop_toBottomOf="@+id/car_img_iv_1"
           android:maxLines="1" />

        <TextView
            android:id="@+id/quick_car_tv"
            android:layout_width="@dimen/dp_225"
            android:layout_height="@dimen/dp_38"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            android:background="@drawable/shape_blue_20radius"
            android:gravity="center"
            android:text="一键养护"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/car_no_location_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/view1"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/no_oil_icon"
            android:layout_marginTop="@dimen/dp_25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小象当前无法获取离您最近的门店信息呢！"
            android:textSize="@dimen/sp_12"
            android:textColor="#797979"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/go_more_car_view"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_27"
            android:gravity="center"
            android:text="查看更多门店"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_11"
            app:qmui_backgroundColor="@color/white"
            app:qmui_borderWidth="0.5dp"
            app:qmui_borderColor="@color/color_76FF"
            app:qmui_radius="@dimen/dp_14"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/car_go_location_view"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/car_go_location_view"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_12"
            android:gravity="center"
            android:text="去授权"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:layout_marginTop="@dimen/common_margin"
            app:qmui_backgroundColor="@color/color_76FF"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="@dimen/dp_14"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/go_more_car_view"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>